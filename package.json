{
    "private": true,
    "workspaces": [ "src/**" ],
    "scripts": {
        "init:submodules": "git submodule update --init",
        "init:venv": "python -m venv .venv",
        "init:declarations": "cd lib/app && tsc --declarationMap --outDir ../../types/app || true",
        "install:python": "pip install -r src/api/requirements.txt",
        "install:node": "yarn install && cd lib/app && yarn install --frozen-lockfile",
        "link:modes": "cd lib/app && yarn run cli link-mode ../../src/app/modes/*",
        "link:extensions": "cd lib/app && yarn run cli link-extension ../../src/app/extensions/*",
        "dev:api": "cd src/api && python app.py",
        "dev:dashboard": "cd src/dashboard && yarn run dev",
        "dev:app": "cd lib/app && yarn run dev",
        "build:dashboard": "cd src/dashboard && yarn run build && mkdir -p ../../dist/dashboard && mv dist/* ../../dist/dashboard",
        "build:app": "cd lib/app && yarn run build && mkdir -p ../../dist/app && mv platform/app/dist/* ../../dist/app"
    },
    "devDependencies": {
        "@ohif/core": "^3.9.0-beta.101",
        "@ohif/extension-cornerstone": "^3.9.0-beta.101",
        "@ohif/extension-default": "^3.9.0-beta.101",
        "@ohif/i18n": "^3.9.0-beta.101",
        "@ohif/mode-longitudinal": "^3.8.5",
        "@ohif/ui": "^3.8.5",
        "@types/react": "^18.3.12",
        "prettier": "^3.3.3",
        "prettier-plugin-tailwindcss": "^0.6.8",
        "prop-types": "^15.6.2",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-i18next": "^12.2.2",
        "react-router": "^6.8.1",
        "react-router-dom": "^6.8.1",
        "typescript": "^5.6.3",
        "webpack": "5.89.0",
        "webpack-merge": "^5.7.3"
    }
}
