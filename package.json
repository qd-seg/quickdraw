{
  "private": true,
  "workspaces": [
    "platform/viewer/extensions/predict-provisioner",
    "platform/viewer/modes/radiology-ai"
  ],
  "scripts": {
    "start": "yarn run start:development",
    "install:python": "pip install -r ./platform/broker/requirements.txt",
    "install:nodejs": "yarn install",
    "build:development": "docker compose -f ./build/compose.development.yml --env-file ./build/configuration/versions.env --env-file ./build/configuration/service.env build",
    "build:production": "docker compose -f ./build/compose.production.yml --env-file ./build/configuration/versions.env --env-file ./build/configuration/service.env build",
    "start:development": "docker compose -f ./build/compose.development.yml --env-file ./build/configuration/versions.env --env-file ./build/configuration/service.env up",
    "start:production": "docker compose -f ./build/compose.production.yml --env-file ./build/configuration/versions.env --env-file ./build/configuration/service.env up -d",
    "stop:development": "docker compose -f ./build/compose.development.yml --env-file ./build/configuration/versions.env --env-file ./build/configuration/service.env stop",
    "stop:production": "docker compose -f ./build/compose.production.yml --env-file ./build/configuration/versions.env --env-file ./build/configuration/service.env stop",
    "clean:development": "docker compose -f ./build/compose.development.yml --env-file ./build/configuration/versions.env --env-file ./build/configuration/service.env down",
    "clean:production": "docker compose -f ./build/compose.production.yml --env-file ./build/configuration/versions.env --env-file ./build/configuration/service.env down"
  },
  "devDependencies": {
    "@types/react": "^18.3.12",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "typescript": "^5.6.3"
  }
}
